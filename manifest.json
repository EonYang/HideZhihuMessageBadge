{
  "manifest_version": 2,
  "name": "隐藏知乎私信红色角标",
  "version": "0.1.2",
  "description": "As the name indicates, I hide the red message badge on Zhihu.com",
  "content_scripts": [{
    "js": ["index.js"],
    "css": ["styles.css"],
    "matches": ["https://*.zhihu.com/*"]
  }],
  "icons": {
    "16": "icons/icon@16.png",
    "32": "icons/icon@32.png",
    "48": "icons/icon@48.png",
    "128": "icons/icon@128.png"
  }
}